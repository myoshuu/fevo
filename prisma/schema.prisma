generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Schema -----------

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
  User User[]
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  name     String
  password String
  roleId   Int
  role     Role   @relation(fields: [roleId], references: [id])
}

model Seminar {
  id      Int       @id @default(autoincrement())
  name    String
  date    DateTime
  session Session[]
}

model Session {
  id                   Int                       @id @default(autoincrement())
  date                 DateTime
  name                 String
  capacity             Int
  startTime            DateTime
  endTime              DateTime
  registrationDeadline DateTime
  seminarId            Int
  seminar              Seminar                   @relation(fields: [seminarId], references: [id])
  registration         RegistrationSessionList[]
}

model Participant {
  id           Int                       @id @default(autoincrement())
  name         String
  email        String
  registration RegistrationSessionList[]
}

model RegistrationSessionList {
  id            Int         @id @default(autoincrement())
  participantId Int
  sessionId     Int
  participant   Participant @relation(fields: [participantId], references: [id])
  session       Session     @relation(fields: [sessionId], references: [id])

  @@unique([participantId, sessionId])
}
